<%- include(`partials/head`); %>


    <div class="flex justify-center">
        <div class="w-1/4 bg-white p-6 text-stone-600">

            <form action="/register" method="post" class="flex flex-col m-0">
                <div class="form-row">
                    <label class="label-black" for="email">Email</label>
                    <input type="email" name="email" id="email">
                </div>
                <div class="form-row">
                    <label class="label-black" for="name">Pseudo</label>
                    <input type="text" name="name" id="name">
                </div>
                <div class="form-row">
                    <label class="label-black" for="password">Mot de passe</label>
                    <input type="password" name="password" id="password">
                </div>
                <div class="form-row">
                    <button class="btn-green" type="submit">S'enregistrer</button>
                    <div class="text-right mt-4">
                        <a href="" class="link text-sm">J'ai déjà un compte</a>
                    </div>
                </div>
            </form>

        </div>
    </div>

